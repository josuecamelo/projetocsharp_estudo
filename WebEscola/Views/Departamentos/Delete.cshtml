@model WebEscola.Models.Departamento
@{
    ViewData["Title"] = "Departamentos";
}
<h1> Excluir </h1>
<p class="text-danger"> @ViewData[ "ErrorMessage" ] </p>
<h3> Tem certeza de que deseja excluir este departamento? </h3>
<div>
    <h4> Departamento </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orcamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orcamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instrutor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instrutor.Nome)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoID" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" value="Excluir" class="btn btn-primary" /> |
        <a asp-action="Index"> Voltar para a Lista </a>
    </form>
</div>
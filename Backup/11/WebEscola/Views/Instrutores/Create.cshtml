@model WebEscola.Models.Instrutor


@{

    ViewData["Title"] = "Adicionar";

}


<h1>Adicionar</h1>


<h4>Instrutor</h4>

<hr />

<div class="row">

    <div class="col-md-12">

        <form asp-action="Create">

            <div class="col-md-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="Nome" class="control-label"></label>

                    <input asp-for="Nome" class="form-control" />

                    <span asp-validation-for="Nome" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Sobrenome" class="control-label"></label>

                    <input asp-for="Sobrenome" class="form-control" />

                    <span asp-validation-for="Sobrenome" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Contratacao" class="control-label"></label>

                    <input asp-for="Contratacao" class="form-control" />

                    <span asp-validation-for="Contratacao" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Escritorio.Localizacao" class="control-label"></label>

                    <input asp-for="Escritorio.Localizacao" class="form-control" />

                    <span asp-validation-for="Escritorio.Localizacao" class="text-danger" />

                </div>

            </div>

            <div class="form-group">

                <div class="col-md-10">

                    <table>

                        <tr>

                            @{

                                int cnt = 0;

                                List<WebEscola.Models.ViewModels.InstrutorCursoData> cursos = ViewBag.Cursos;


                                foreach (var curso in cursos)

                                {

                                    if (cnt++ % 2 == 0)

                                    {

                                    @:</tr><tr>


                                    }

                                    @:<td>


                                        <input type="checkbox"
                                               name="cursosSelecionados"
                                               value="@curso.CursoID"
                                               @(Html.Raw(curso.Atribuido ? "checked=\"checked\"" : "")) />

                                        @curso.Titulo

                                        @: &nbsp;</td>


                                    }

                                @:</tr>


                            }

                        </table>

                    </div>

                </div>

                <div class="form-group">

                    <input type="submit" value="Adicionar" class="btn btn-primary" />

                </div>

            </form>

        </div>

    </div>

    <div>

        <a asp-action="Index">Voltar para a Lista</a>

    </div>


    @section Scripts {

        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }


@model IEnumerable<WebEscola.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<h1>Lista de Cursos</h1>

<p>
    <a asp-action="Create">Adicionar Curso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credito)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CursoID">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CursoID">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CursoID">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

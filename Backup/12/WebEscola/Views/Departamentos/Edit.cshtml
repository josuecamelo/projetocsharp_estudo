@model WebEscola.Models.Departamento
@{
    ViewData["Title"] = "Departamentos";
}
<h1> Editar </h1>
<h4> Departamento </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <span asp-validation-for="Instrutor" class="text-danger"></span>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartamentoID" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orcamento" class="control-label"></label>
                <input asp-for="Orcamento" class="form-control" />
                <span asp-validation-for="Orcamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inicio" class="control-label"></label>
                <input asp-for="Inicio" class="form-control" />
                <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                Administrador
                <select asp-for="InstrutorID" class="form-control" asp-items="ViewBag.InstrutorID">
                    <option value=""> -- Selecione -- </option>
                </select>
                <span asp-validation-for="InstrutorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index"> Voltar para a Lista </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}